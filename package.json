{
  "name": "nestjs-casl-authorization",
  "version": "1.0.2",
  "description": "NestJS casl authorization mannager",
  "author": "Luis Carlos Arias <luis.carlos.arias.camacho@gmail.com>",
  "license": "MIT",
  "readmeFilename": "README.md",
  "main": "dist/index.js",
  "types": "dist/index.d.js",
  "files": [
    "dist",
    "*.md"
  ],
  "directories": {
    "lib": "dist"
  },
  "scripts": {
    "start:dev": "tsc -w",
    "build": "tsc",
    "prepare": "npm run build",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "version": "auto-changelog -p && git add CHANGELOG.md"
  },
  "keywords": [
    "nestjs"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LuisCarlosAriasC/nestjs-casl-authorization"
  },
  "bugs": "https://github.com/LuisCarlosAriasC/nestjs-casl-authorization",
  "peerDependencies": {
    "@nestjs/common": "^6.0.0 || ^7.0.0",
    "@nestjs/core": "^6.0.0 || ^7.0.0"
  },
  "dependencies": {
    "@casl/ability": "5.2.2",
    "@nestjs/graphql": "7.10.6",
    "graphql": "15.5.0"
  },
  "devDependencies": {
    "@nestjs/common": "^7.0.0",
    "@nestjs/core": "^7.0.0",
    "@types/jest": "24.0.20",
    "@types/node": "14.14.20",
    "@types/supertest": "2.0.10",
    "auto-changelog": "2.2.1",
    "eslint": "7.17.0",
    "jest": "26.6.3",
    "prettier": "2.2.",
    "rxjs": "^6.6.3",
    "supertest": "6.0.1",
    "ts-jest": "26.4.4",
    "ts-node": "9.1.1",
    "tsc-watch": "4.2.9",
    "tsconfig-paths": "3.9.0",
    "typescript": "4.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
